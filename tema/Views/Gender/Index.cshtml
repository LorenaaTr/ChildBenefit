@model List<Gender>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Lista Gjinive</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Gender" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Shto Gjini
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Gjinia</th>
        <th>Gjinia Anglisht</th>
        <th>Gjinia Serbisht</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.AlDescription</td>
                <td>@obj.EnDescription</td>
                <td>@obj.SrDescription</td>
            </tr>
        }
    </tbody>
</table>
</div>
