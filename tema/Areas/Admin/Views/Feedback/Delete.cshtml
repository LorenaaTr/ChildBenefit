@model Feedback

<div class="card shadow border-0" style="margin-top: 100px; margin-left: 270px; margin-right: 50px;">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Fshij Feedback</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Emri i Përdoruesit</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Email-i</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Message" disabled class="form-control border-0 shadow" style="height: 120px;"></textarea>
                    <label class="ms-2">Mesazhi</label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Fshije</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Feedback" asp-action="Index" class="btn btn-outline-secondary form-control border">Kthehu Prapa</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
