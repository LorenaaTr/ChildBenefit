@model Parent

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Fshij Prind</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="IdParent" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2"> Emri</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Surname" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Mbiemri</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MaidenName" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Mbiemri Vajzeris</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PersonalNo" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Numri Personal</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateOfBirth" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Ditelindja</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Address" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Adresa</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Email</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ContactNumber" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Numri Telefonit</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="BankAccountNumber" disabled type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Xhirollogaria</label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Fshije</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Parent" asp-action="Index" class="btn btn-outline-secondary form-control border">Kthehu Prapa</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



