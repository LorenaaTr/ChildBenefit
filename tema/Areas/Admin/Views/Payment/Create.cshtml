@model PaymentVM

<div class="card shadow border-0 mt-4 content">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Shto Pagese</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Payment.PaymentDate" type="date" class="form-control border-0 shadow" />
                    <label class="ms-2">Data Pageses</label>
                    <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
                </div>
          @*       <div class="form-floating py-2 col-12">
                    <input asp-for="Payment.Amount" type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Shuma e Pageses</label>
                </div> *@
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Payment.IdParent" asp-items="@Model.ParentList" class="form-select border-0 shadow">
                        <option disabled selected>-Zgjedh Prindin-</option>
                    </select>
                    <label asp-for="Payment.IdParent" class="ms-2">Prindi</label>
                    <span asp-validation-for="Payment.IdParent" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Shto</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Payment" asp-action="Index" class="btn btn-outline-primary form-control border">Kthehu Prapa</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}