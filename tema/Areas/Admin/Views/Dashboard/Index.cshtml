@model DashboardVM


<div class="card shadow border-0 mt-4 content" >
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary"> - Paneli i Adminit -</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4" style="background-color: #fff; border-radius: 10px;">
        <div class="row pb-2">
            <div class="col-6">
                <h5 class="text-secondary">Pasqyrë e Përgjithshme</h5>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <div class="card shadow-sm border-0 p-3" style="border-radius: 10px;">
                    <h5 class="card-title text-center" style="font-weight: bold; font-size: 1.2rem;">Përdoruesit e Sistemit</h5>
                    <p class="text-center display-4">@Model.TotalUsers</p>
                </div>
            </div>
            <div class="col-4">
                <div class="card shadow-sm border-0 p-3" style="border-radius: 10px;">
                    <h5 class="card-title text-center" style="font-weight: bold; font-size: 1.2rem;">Numri i Fëmijëve</h5>
                    <p class="text-center display-4">@Model.TotalChildren</p>
                </div>
            </div>
            <div class="col-4">
                <div class="card shadow-sm border-0 p-3" style="border-radius: 10px;">
                    <h5 class="card-title text-center" style="font-weight: bold; font-size: 1.2rem;">Numri i Prindërve</h5>
                    <p class="text-center display-4">@Model.TotalParents</p>
                </div>
            </div>
        </div>

        <!-- Feedback Table: Mesazhet e Perdoruesve -->
        <h3 class="mt-5  text-primary" style="font-size: 1.5rem;">Mesazhet e Perdoruesve</h3>
        <div class="table-responsive mt-4">
            <table class="table table-striped table-bordered table-hover" style="width: 100%; border-collapse: collapse;">
                <thead class="bg-light" style="background-color: #e9ecef; color: #333; font-weight: 600;">
                    <tr>
                        <th style="padding: 15px; text-align: center;">Name</th>
                        <th style="padding: 15px; text-align: center;">Email</th>
                        <th style="padding: 15px; text-align: center;">Message</th>
                        <th style="padding: 15px; text-align: center;">Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model.FeedbackList)
                    {
                        <tr>
                            <td style="padding: 15px; text-align: center;">@feedback.Name</td>
                            <td style="padding: 15px; text-align: center;">@feedback.Email</td>
                            <td style="padding: 15px; text-align: center;">@feedback.Message</td>
                            <td style="padding: 15px; text-align: center;">@feedback.DateSubmitted.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
