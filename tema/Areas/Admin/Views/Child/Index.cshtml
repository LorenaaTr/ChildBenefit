@model List<Child>

<div class="card shadow border-0 mt-4 content">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Lista Femijeve</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row  pb-2 ">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Child" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Shto Femije
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Emri</th>
                    <th>Mbiemri</th>
                    <th>Nr Personal</th>
                    <th>Ditelindja</th>
                    <th>Relacioni</th>
                    <th>Statusi</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Surname</td>
                        <td>@obj.PersonalNo</td>
                        <td>@obj.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        <td>@obj.Relation.AlDescription</td>
                        <td>@obj.Status.AlDescription</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Child" asp-action="Edit" asp-route-id="@obj.IdChild" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="Child" asp-action="Delete" asp-route-id="@obj.IdChild" method="post" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
